{
    "scopeName": "source.olvasm",
    "name": "Assembleur Ã  deux addresses",
    "fileExtensions": [".olvasm"],
    "patterns": [
        {
            "name": "keyword.instruction.olvasm",
            "match": "(LI|PR|ARI|LRZ|AR|SRI|SR|RMC|LAX|SAX|LCR|LZ|LR|FD|KAC|li|pr|ari|lrz|ar|sri|sr|rmc|lax|sax|lcr|lz|lr|fd|kac)"
        },
        {
            "name": "keyword.numbermode.olvasm",
            "match": "(DE1|DE2|de1|de2|KEP|KES|kep|kes|CSECT|csect)"
        },
        {
            "name": "variable.parameter.register.olvasm",
            "match": "\\%([1][0-5]|0?[0-9]|M|A|RA|R|WR|CR|m|a|ra|r|wr|cr)"
        },
        {
            "name": "constant.numeric.olvasm",
            "match": "\\$0[xX]([A-Fa-f0-9]{1,2})|\\$(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])"
        },
        {
            "name": "comment.line.semicolon.olvasm",
            "match": ";.*$"
        },
        {
            "name": "register.count.olvasm",
            "match": "~0?(1[0-5]|[0-9])"
        },
        {
            "name": "memory.pointer.number.olvasm",
            "match": "&[12]"
        }
    ],
    "repository": {}
}
